<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="6dp">

    <TextView
        android:id="@+id/tv_eventN"
        android:layout_width="58dp"
        android:layout_height="46dp"
        android:layout_marginStart="25dp"
        android:layout_weight="1"

        android:text="TextView" />

    <ImageButton
        android:id="@+id/ib_eventD"
        android:layout_width="1dp"
        android:layout_height="wrap_content"

        android:layout_weight="1"
        android:background="#00CFBBBB"
        app:srcCompat="@drawable/ic_baseline_double_arrow_25" />


    <ImageButton
        android:id="@+id/ib_eventS"
        android:layout_width="1dp"
        android:layout_height="wrap_content"

        android:layout_weight="1"
        android:background="#00CFBBBB"
        app:srcCompat="@drawable/ic_baseline_tag_faces_24" />

    <ImageButton
        android:id="@+id/ib_eventF"
        android:layout_width="1dp"
        android:layout_height="match_parent"

        android:layout_weight="1"
        android:background="#00CFBBBB"

        app:srcCompat="@drawable/ic_baseline_thumb_up_26" />


</LinearLayout>